  "base-bigarray" {build}
  "base-unix" {build}
  "camlp4" {build}
  "lutils" {>= "1.9"}
  ("oasis" {build & >= "0.4.7"} | "oasis-mirage" {build & >= "0.4.7"})
  "ocamlbuild" {build}
  "ocamlfind" {build}
  "ounit" {build & >= "2.0.0"}
]
available: [ ocaml-version >= "4.02" ]
